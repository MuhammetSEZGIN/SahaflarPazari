@using SahaflarPazari.Models;
@model Kullanici
@{
    ViewBag.Title = "Index";
    List<IstekListesi> deneme = ViewBag.sepet as List<IstekListesi>;
}


<style>
    .user-info-button {
        font-size: 20px;
        padding: 12px 24px;
        margin-bottom: 16px;
    }

    /* Custom class for setting the same width for all buttons */
    .btn-custom-width {
        width: 100%; /* Set the desired width for the buttons */
    }
</style>

<div class="container ">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div id="kulaniciBilgileri" class="btn btn-light btn-custom-width user-info-button" data-mdb-ripple-color="dark">
                <i class="fa fa-user" style="margin-right: 8px;"></i>
                Kullanıcı Bilgileri
            </div>
        </div>
        @if (User.IsInRole("User") || User.IsInRole("Admin"))
        {
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div id="adresBilgileri" class="btn btn-light btn-custom-width user-info-button" data-mdb-ripple-color="dark">
                    <i class="fas fa-address-book" style="margin-right: 8px;"></i>
                    Adres Bilgileri
                </div>
            </div>

            <div class="col-lg-6 col-md-6 col-sm-12">
                <div id="istekListesi" class="btn btn-light btn-custom-width user-info-button" data-mdb-ripple-color="dark">
                    <i class="fas fa-heart" style="margin-right: 8px;"></i>
                    İstek Listesi
                </div>
            </div>
        }

        <div class="col-lg-6 col-md-6 col-sm-12">
            <div id="guvenlikBilgileri" class="btn btn-light btn-custom-width user-info-button" data-mdb-ripple-color="dark">
                <i class="fas fa-user-secret" style="margin-right: 8px;"></i>
                Güvenlik ve Giriş Ayarları
            </div>
        </div>
    </div>
</div>


<div id="kullaniciSection" class="content-section">
    @Html.Partial("UserInfo")
</div>

<div id="adresSection" class="content-section">
    <div style="text-align: center;">
        <div style="display: inline-block; margin-right: 10px;">
            <button type="button" class="btn btn-primary btn-lg" id="addAdressButton">Adres Ekle</button>
        </div>
    </div>
    @Html.Partial("Adresses")

</div>
<div id="listSection" class="content-section">
    @Html.Partial("ShowList")
</div>

<div id="securitySection" class="content-section">
    @Html.Partial("SecurityAndLogin");
</div>

<div id="AdressAddSection" class="content-section">
    @Html.Partial("AdressAdd");
</div>

<script src="~/Content/js/jquery-3.3.1.min.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>

<script>
    // Hide all content sections except the first one

    $(".content-section").hide();
    // Handle button click events
    $("#kulaniciBilgileri").on("click", function () {
        $(".content-section").hide();
        $("#kullaniciSection").show();
    });

    $("#adresBilgileri").on("click", function () {
        $(".content-section").hide();
        $("#adresSection").show();
    });

    $("#istekListesi").on("click", function () {
        $(".content-section").hide();
        $("#listSection").show();
    });

    $("#guvenlikBilgileri").on("click", function () {
        $(".content-section").hide();
        $("#securitySection").show();
    });

    $("#addAdressButton").on("click", function () {
        console.log("basıldı");
        $(".content-section").hide();
        $("#AdressAddSection").show();
    });
</script>


<style>
    .profilContainer {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: #f8f9fa;
        max-width: 500px; /* Limit the width of the form */
        margin: 0 auto; /* Center the form horizontally */
    }
</style>
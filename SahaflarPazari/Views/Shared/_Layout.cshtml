<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>



    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ogani | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500&display=swap" rel="stylesheet">



    <!-- Css Styles -->


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css">
</head>


<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="#"><img src="~/Content/img/AnaMenu/logo/sahaflar-pazari-logo.png" alt=""></a>
        </div>
        @if ((User.IsInRole("User") || User.IsInRole("Admin")))
        {
            <div class="humberger__menu__cart">
                <ul>
                    <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                    <li><a href="@Url.Action("ShopCart","ShopCart")"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
                    <li><a href="@Url.Action("Index","Profile")"><i class="fa fa-user" aria-hidden="true" style="text-decoration: none; color: green;"></i> @HttpContext.Current.User.Identity.Name</a></li>
                </ul>

            </div>

        }
        else
        {
            if (!Request.Url.AbsolutePath.Equals(Url.Action("Login", "Account"), StringComparison.OrdinalIgnoreCase))
            {
                <div class="humberger__menu__cart">
                    <ul>
                        <li> <a href="@Url.Action("Login", "Account")" style="text-decoration: none; color: green;"><i class="fa fa-user" aria-hidden="true"></i> Login</a></li>
                    </ul>

                </div>
            }

        }
        <li><a href="/ShopCart/Orders">Siparişlerim</a></li>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li class="active"><a href="@Url.Action("Index", "Home")">Home</a></li>
                
                <li>
                    <a href="/Book/MyBooks">Kitaplarım</a>
                </li>
                <li>
                    <a href="#">Siparişler </a>
                    <ul class="header__menu__dropdown">
                        <li><a href="/ShopCart/Orders">Siparişlerim</a></li>
                        <li><a href="/ShopCart/SoldItems">Gelen Siparişler</a></li>
                    </ul>
                <li>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="#">Admin</a>
                        <ul class="header__menu__dropdown">
                            <li><a href="@Url.Action("Users","Admin")">Kullanıcılar</a></li>
                            <li><a href="@Url.Action("Complaints","Admin")">Sikayetler</a></li>
                          
                        </ul>
                    }


                </li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="#" style="text-decoration: none; color: blue;"><i class="fab fa-facebook"></i> Facebook</a>
            <a href="#" style="text-decoration: none; color: skyblue;"><i class="fab fa-twitter"></i> Twitter</a>
            <a href="#" style="text-decoration: none; color: #0e76a8;"><i class="fab fa-linkedin"></i> LinkedIn</a>
            <a href="#" style="text-decoration: none; color: red;"><i class="fab fa-pinterest"></i> Pinterest</a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li>@HttpContext.Current.User.Identity.Name</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__left">
                            <ul>

                                <li></li>


                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__right">
                            <div class="header__top__right__social">
                                <a href="#" style="text-decoration: none; color: blue;"><i class="fab fa-facebook"></i> Facebook</a>
                                <a href="#" style="text-decoration: none; color: skyblue;"><i class="fab fa-twitter"></i> Twitter</a>
                                <a href="#" style="text-decoration: none; color: #0e76a8;"><i class="fab fa-linkedin"></i> LinkedIn</a>
                                <a href="#" style="text-decoration: none; color: red;"><i class="fab fa-pinterest"></i> Pinterest</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a href="@Url.Action("Index", "Home")"><img src="~/Content/img/AnaMenu/logo/sahaflar-pazari-logo.png"></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>

                         
                            <li>
                                <a href="#">Siparişler </a>
                                <ul class="header__menu__dropdown">
                                    <li><a href="/ShopCart/Orders">Siparişlerim</a></li>
                                    <li><a href="/ShopCart/SoldItems">Gelen Siparişler</a></li>
                                </ul>
                            </li>

                            @if ((User.IsInRole("User") || User.IsInRole("Admin")))
                            {
                                <li><a href="/Book/MyBooks">Kitaplarım</a></li>
                            }

                           
                            <li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="#">Admin</a>
                                    <ul class="header__menu__dropdown">
                                        <li><a href="@Url.Action("Users","Admin")">Kullanıcılar</a></li>
                                        <li><a href="@Url.Action("Complaints","Admin")">Şikayetler</a></li>
                                       
                                    </ul>
                                }

                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    @if ((User.IsInRole("User") || User.IsInRole("Admin")))
                    {
                        <div class="header__cart">
                            <ul>

                                <li><a href="@Url.Action("ShopCart","ShopCart")"><i class="fa fa-shopping-bag"></i> <span id="bookCount">@Session["ItemCount"]</span></a></li>
                                <li><a href="@Url.Action("Index", "Profile")" style="text-decoration: none; color: green;"><i class="fa fa-user" aria-hidden="true"></i> @HttpContext.Current.User.Identity.Name</a></li>
                                <li>
                                    <a href="@Url.Action("Logout", "Account")" style="text-decoration: none; color: red;">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i> Logout
                                    </a>
                                </li>
                            </ul>

                        </div>

                    }
                    else
                    {
                        if (!Request.Url.AbsolutePath.Equals(Url.Action("Login", "Account"), StringComparison.OrdinalIgnoreCase))
                        {
                            <div class="header__cart">
                                <a href="@Url.Action("Login", "Account")" style="text-decoration: none; color: green;"><i class="fa fa-user" aria-hidden="true"></i>Login</a>
                            </div>
                        }



                    }

                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Hero Section Begin -->
    <!-- Hero Section End -->
    <!-- Categories Section Begin -->
    <!-- Categories Section End -->
    <!-- Featured Section Begin -->

    @RenderBody()
    @RenderSection("script", false);
    <!-- Featured Section End -->
    <!-- Banner Begin -->
    <!-- Banner End -->
    <!-- Latest Product Section Begin -->
    <!-- Latest Product Section End -->
    <!-- Blog Section Begin -->
    <!-- Blog Section End -->
